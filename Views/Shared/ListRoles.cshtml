@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
}

<h1>All Roles</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-controller="administration" asp-action="CreateRole">Add new role</a>
    foreach (var role in Model)
    {
        <div class="Card mb-3">
            <div class="card-header">
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" style="width:auto" asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id">Edit</a>
                <a class="btn btn-danger" style="width:auto" asp-controller="Administration" asp-action="DeleteRole" asp-route-id="@role.Id">Delete</a>
            </div>
        </div>
    }

}
else
{
    <div class="Card">
        <div class="card-header">
            No roles yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Press button to create a role
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="Administration" asp-action="CreateRole">Create Role</a>
        </div>
    </div>

}