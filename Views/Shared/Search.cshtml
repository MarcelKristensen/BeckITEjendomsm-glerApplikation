@model SearchViewModel
@{
    ViewBag.Title = "Search";
}

<h1>Search Function</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post" asp-controller="Search" asp-action="Search">
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="form-group">
                <label asp-for="Query"></label>
                <input asp-for="Query" class="form-control" />
                @*<span asp-validation-for="Email" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Ejerlejlighed">
                        <input asp-for="Ejerlejlighed" />
                        @Html.DisplayNameFor(m => m.Ejerlejlighed)
                    </label>
                    <label asp-for="Villa">
                        <input asp-for="Villa" />
                        @Html.DisplayNameFor(m => m.Villa)
                    </label>
                    <label asp-for="Rækkehus">
                        <input asp-for="Rækkehus" />
                        @Html.DisplayNameFor(m => m.Rækkehus)
                    </label>
                    <label asp-for="Landejendom">
                        <input asp-for="Landejendom" />
                        @Html.DisplayNameFor(m => m.Landejendom)
                    </label>
                    <label asp-for="Fritidsbolig">
                        <input asp-for="Fritidsbolig" />
                        @Html.DisplayNameFor(m => m.Fritidsbolig)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Andelsbolig">
                        <input asp-for="Andelsbolig" />
                        @Html.DisplayNameFor(m => m.Andelsbolig)
                    </label>
                    <label asp-for="Villalejlighed">
                        <input asp-for="Villalejlighed" />
                        @Html.DisplayNameFor(m => m.Villalejlighed)
                    </label>
                    <label asp-for="Fritidsgrund">
                        <input asp-for="Fritidsgrund" />
                        @Html.DisplayNameFor(m => m.Fritidsgrund)
                    </label>
                    <label asp-for="Helårsgrund">
                        <input asp-for="Helårsgrund" />
                        @Html.DisplayNameFor(m => m.Helårsgrund)
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>
</div>