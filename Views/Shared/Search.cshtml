@model SearchViewModel
@{
    ViewBag.Title = "Search";
}
<head>
    <style>
        div.a {
            display: inline-block
        }
    </style>
</head>
<h1>Søge funktion</h1>
<div class="row">
    <div class="col-md-12">
        <form method="post" asp-controller="Search" asp-action="Search">

            <div class="form-group">
                <label asp-for="Query"></label>
                <input asp-for="Query" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="StLiggetid"></label>
                <input asp-for="StLiggetid" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SlLiggetid"></label>
                <input asp-for="SlLiggetid" class="form-control" />
            </div>
            <div>
                @for (int i = 0; i < Model.btList.Count; i++)
                {
                    <input type="checkbox" asp-for="@Model.btList[i].IsChecked" name="@Model.btList[i].TName" />
                    <label method="get" asp-for="@Model.btList[i].IsChecked">
                        @Model.btList[i].TName
                    </label>
                    <input type="hidden" asp-for="@Model.btList[i].IsChecked" name="@Model.btList[i].TName" value="false"/>                    
                }
            </div>
            <button type="submit" class="btn btn-primary">Søg</button>
        </form>
    </div>
    <table class="table">
        @*<thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.rList.Street)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Zipcode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Liggetid)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Boligsiden.BoligsidenHyperlink)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Boliga.BoligaHyperlink)
                    </th>
                </tr>
            </thead>*@
        <tbody>
            @if (Model.rList != null)
            {
                @foreach (var item in Model.rList)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Street)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Zipcode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Liggetid)
                        </td>
                        <td>
                            <a href="@Html.DisplayFor(modelItem => item.Boligsiden.BoligsidenHyperlink)" target="_blank">@Html.DisplayFor(modelItem => item.Street)</a>
                        </td>
                        <td>
                            <a href="@Html.DisplayFor(modelItem => item.Boliga.BoligaHyperlink)" target="_blank">@Html.DisplayFor(modelItem => item.Street)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type.BoligTypeNavn)
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>
