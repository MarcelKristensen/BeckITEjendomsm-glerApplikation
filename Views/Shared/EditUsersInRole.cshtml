@model List<UserRoleViewModel>

@{ 
    var roleId = ViewBag.roleId;
}

<form method="post">
    <div class="Card mb-3">
        <div class="card-header">
            <h2>Assign users to this role</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model[i].UserId" />
                <input type="hidden" asp-for="@Model[i].Name" />
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label asp-for="@Model[i].IsSelected" class="form-check-label">
                    @Model[i].Name
                </label>
            </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="img-thumbnail btn-primary" style="width:auto"/>
            <a class="btn btn-primary" style="width:auto" asp-action="EditRole" asp-route-id="@roleId">Cancel</a>
        </div>
    </div>
</form>