@model CreateAddressViewModel

@{
    ViewBag.Title = "Create Address";
}

<h2>Address</h2>



<form asp-controller="Address" asp-action="Create" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Street" class="col-sm-2 col-form-label">Street</label>
        <div class="col-sm-10">
            <input asp-for="Street" class="form-control" placeholder="Street Name">
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Zipcode" class="col-sm-2 col-form-label">Zipcode</label>
        <div class="col-sm-10">
            <input asp-for="Zipcode" class="form-control" placeholder="Zipcode" />
            <span asp-validation-for="Zipcode" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="BoligsidenAddresse.BoligsidenHyperlink" class="col-sm-2 col-form-label">Boligsiden Link</label>
        <div class="col-sm-10">
            <input asp-for="BoligsidenAddresse.BoligsidenHyperlink" class="form-control" placeholder="Boligsiden Link" />
            <span asp-validation-for="BoligsidenAddresse.BoligsidenHyperlink" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="BoligaAddresse.BoligaHyperlink" class="col-sm-2 col-form-label">Boliga Link</label>
        <div class="col-sm-10">
            <input asp-for="BoligaAddresse.BoligaHyperlink" class="form-control" placeholder="Boliga Link" />
            <span asp-validation-for="BoligaAddresse.BoligaHyperlink" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>
   
